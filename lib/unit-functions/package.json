{
  "name": "morpho-unit-functions",
  "alias": "unit-functions",
  "version": "0.3.0",
  "description": "Adds default units for css properties with numerical values",
  "main": "src/index.js",
  "unpkg": "src/index.js",
  "module": "src/index.js",
  "scripts": {
    "test": "cross-env-shell ../../node_modules/.bin/nyc -i esm -r lcov ../../node_modules/.bin/testmatrix test/unit-functions.test.js && cross-env-shell ../../node_modules/.bin/nyc report",
    "build": "npm run bundle && npm run minify",
    "createIndex": "node ./util/createIndex.js",
    "bundle": "cross-env-shell DIR=$PKG PKG=$npm_package_alias ../../node_modules/.bin/rollup -i ${DIR}$npm_package_module -o ${DIR}dist/$PKG.js --no-esModule -mf iife -n $PKG",
    "minify": "cross-env-shell DIR=$PKG PKG=$npm_package_alias ../../node_modules/.bin/terser ${DIR}dist/$PKG.js -o ${DIR}dist/$PKG.js -mc --source-map includeSources,url=$PKG.js.map"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/B-Teague/morpho/tree/master/lib/unit"
  },
  "keywords": [
    "morpho",
    "css-in-js",
    "unit",
    "css",
    "hyperapp",
    "react"
  ],
  "author": "Brian Teague",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.2"
  }
}
